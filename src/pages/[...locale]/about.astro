---
import { i18n } from "astro:config/client";
import Base from "$layouts/Base.astro";
import i18nit from "$i18n";

export async function getStaticPaths() {
	return i18n?.locales.map(locale => ({ params: { locale: locale == i18n?.defaultLocale ? undefined : (locale as string) } }));
}

const { locale = i18n!.defaultLocale } = Astro.params;

const t = i18nit(locale);
---

<style lang="less">
		/* Page-scoped rhythm and vertical tokens; avoid affecting global styles */
		main {
			/* retained rhythm token for other internal spacing if needed */
			--about-rhythm: clamp(64px, 14vw, 180px);

			/* New vertical composition tokens requested */
			--about-top-start: clamp(12vh, 18vh, 22vh); /* page top → title */
			--about-title-gap: calc(1.6 * 1.8 * 18px);  /* ~51.84px (1.6 × body line-height) */
			--about-bottom-breath: clamp(6vh, 10vh, 12vh); /* last line → footer */

			/* Centered column and responsive measure */
			width: 90vw;                /* mobile base */
			max-width: none;
			padding-inline: 4vw;        /* mobile side breathing */
			margin-inline: auto;

			/* Remove layout constraints that push content down elsewhere */
			min-height: auto !important;
			display: block !important;
			align-items: initial !important;

			/* bottom breathing only (top handled by title token) */
			padding-bottom: var(--about-bottom-breath);
			padding-top: 0; /* ensure no large top padding remains */
		}

	/* Tablet and up: convert to character-based measure */
	@media (min-width: 768px) {
		main { width: auto; max-width: 48ch; padding-inline: 0; }
	}
	@media (min-width: 1024px) {
		main { max-width: 52ch; }
	}
	@media (min-width: 1280px) {
		main { max-width: 56ch; }
	}

	article {
		/* Match "At Twenty-Five" text rhythm */
		font-weight: 300;
		font-size: 18px;
		line-height: 1.8;
		letter-spacing: 0.02em;
		color: var(--text-color, var(--primary-color));

		/* Fine typographic features */
		font-kerning: normal;
		font-variant-numeric: oldstyle-nums; /* OSF */
		font-variant-ligatures: common-ligatures discretionary-ligatures;
		font-feature-settings: "onum" 1, "liga" 1, "dlig" 1, "kern" 1, "calt" 1;

			h1 {
				/* Title scale and spacing parity with "At Twenty-Five" */
				font-size: 1.5rem;
				font-weight: 400;
				text-align: center;
				letter-spacing: 0.02em;
				margin: 0;

				/* Use the new top/start token and the title → verse gap token */
				padding-top: var(--about-top-start);
				margin-bottom: var(--about-title-gap);
			}

		/* Keep paragraph defaults aligned with the essay system */
		:global(p) {
			margin: 0 0 1.25rem 0;
			font-weight: 300;
			font-size: 18px;
			text-align: left;
			text-justify: auto;
			-webkit-hyphens: auto;
			-ms-hyphens: auto;
			hyphens: auto;
			text-align-last: left;
			letter-spacing: 0.02em;
		}

		:global(hr) {
			border-bottom: 1px dashed var(--remark-color);
			margin: 1rem 0;
		}

		/* Verse block: left-aligned within the centered column */
		.verse { margin-top: 0; text-align: left; }
		.verse-line { display: block; margin: 0; }
		/* Line → line gap: 1.25× line-height */
		.verse-line + .verse-line { margin-top: 1.25lh; }
		/* Optional stanza gap hook (empty line / stanza marker) */
		.stanza-gap, .verse-line.stanza-gap { margin-top: 1.9lh; }

			/* Small-screen adjustments: slightly reduce top start so content isn't buried */
			@media (max-width: 480px) {
				main { --about-top-start: clamp(12vh, 15vh, 16vh); --about-bottom-breath: clamp(6vh, 8vh, 10vh); }
				h1 { padding-top: var(--about-top-start); }
			}

		/* Hidden footnote */
		.footnote-trigger { position: relative; cursor: help; outline: none; }
		.footnote-trigger::after {
			content: attr(data-footnote);
			position: absolute;
			left: 50%;
			bottom: calc(100% + 8px);
			transform: translateX(-50%);
			white-space: nowrap;
			background-color: var(--background-color);
			border: 1px solid var(--shadow-color);
			border-radius: 4px;
			padding: 0.45rem 0.65rem;
			font-size: 0.85rem;
			line-height: 1.4;
			color: var(--secondary-color);
			box-shadow: 0 2px 10px rgba(0,0,0,.08);
			opacity: 0;
			visibility: hidden;
			pointer-events: none;
			transition: opacity .2s ease-in-out, visibility .2s ease-in-out;
			z-index: 5;
		}
		.footnote-trigger:hover::after,
		.footnote-trigger:focus::after,
		.footnote-trigger:active::after { opacity: 1; visibility: visible; }
	}
</style>

<Base title={t("navigation.about")} {locale}>
	<main>
			<article aria-labelledby="why-i-write">
				<h1 id="why-i-write">Why I write</h1>
				<div class="verse" role="group" aria-label="Verse lines">
					<span class="verse-line">Time moves in subtleties you can’t quite name.</span>
					<span class="verse-line">It doesn’t only slip away — it folds back,</span>
					<span class="verse-line">like the tide rising to the shore.</span>
					<span class="verse-line">I want to write time down.<span class="footnote-trigger" tabindex="0" role="note" aria-label="Footnote" data-footnote="— From Rain (《雨》) by 黃錦樹."></span></span>
				</div>
			</article>
	</main>
</Base>
