---
import Base from "$layouts/Base.astro";
---

<Base title={"Home | Jade's Space"} locale={"en"}>
  <main class="cover container page">
    <figure class="hero">
      <!-- replaced responsive picture with a single high-quality image file -->
      <img src="/me.png" alt="Shiyu Wang" class="home-photo" loading="lazy" decoding="async" />
    </figure>

    <section class="quote">
      <p class="quote-text">I write and record to taste life twice.</p>
      <p class="quote-date">Nov 1, 2025</p>
    </section>
  </main>

  <footer class="site-footer container">
    <p class="cta">If you want to know more about me ...</p>
    <p class="byline"><a href="/jotting/at-twenty-five/">At Twenty-Five</a></p>
  </footer>
</Base>
