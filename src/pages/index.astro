---
import Base from "$layouts/Base.astro";
---

<Base title={"Home | Jade's Space"} locale={"en"}>
  <main class="cover container page home-cover">
    <figure class="hero">
      <!-- replaced responsive picture with a single high-quality image file -->
      <img src="/me.png" alt="Shiyu Wang" class="home-photo" loading="lazy" decoding="async" />
    </figure>

    <section class="quote">
      <p class="quote-text">I write and record to taste life twice.</p>
      <p class="quote-date">Nov 1, 2025</p>
    </section>

    <!-- Move CTA into <main> so client-side Swup page swaps include it
         and the CTA won't persist across navigations. -->
    <div class="cta-block">
      <p class="cta-sentence">If you want to know more about me ...</p>
      <p class="cta-link"><a href="/jotting/at-twenty-five">At Twenty-Five</a></p>
    </div>
  </main>
</Base>

<style>
  /* Page-scoped overrides for the homepage only. Keep these specific so we don't
     affect other pages that reuse shared classes. */
  .home-cover .cta-block{
    display:flex;
    flex-direction:column;
    align-items:center;
    justify-content:center;
    text-align:center;
    margin-block-start: clamp(2rem, 5vw, 3.5rem);
  }

  /* Match the visual tone of the main quote: same font family/size/letter spacing */
  .home-cover .cta-sentence{
    margin: 0 0 0.6rem 0; /* ~0.6rem gap -> ~0.5â€“0.75rem requested */
    font-family: var(--font-body);
    font-size: var(--cover-text-size); /* same as .quote-text */
    letter-spacing: 0.003em;
    line-height: 1.65;
    font-weight: 400;
    text-align: center;
  }

  .home-cover .cta-link{ margin:0; font-size: calc(var(--cover-text-size) - 0.125rem); }
</style>
