---
/**
 * Minimal clean footer — only copyright text
 * Replace your entire Footer.astro content with this.
 */

let { author, copyright, isHome = false } = Astro.props;

// fallback setup
const authorName =
  typeof author === "string" ? author : (author?.name ?? "Shiyu Wang");

const year =
  (copyright && copyright.year) || new Date().getFullYear().toString();
---

<footer class="w-full text-center" style={isHome ? "padding-top:1.2rem; margin-top:0;" : "margin-top:var(--cover-copyright-gap);"}>
  <p class="meta" style="margin:0 0 .35rem 0; color: var(--muted);">A quiet space, updated occasionally.</p>
  <p style="margin:0; color:var(--muted); font-family: 'Spectral', var(--font-body), serif; font-size:0.85rem;">© {year} {authorName}.</p>
</footer>
