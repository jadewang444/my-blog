---
/**
 * Minimal clean footer — only copyright text
 * Replace your entire Footer.astro content with this.
 */

let { author, copyright, isHome = false } = Astro.props;

// fallback setup
const authorName =
  typeof author === "string" ? author : (author?.name ?? "Shiyu Wang");

const year =
  (copyright && copyright.year) || new Date().getFullYear().toString();
---

<footer
  class="site-copyright w-full text-center flex items-center justify-center text-gray-500"
  style={
    isHome
      ? "font-family: 'Spectral', var(--font-body), serif; font-weight:400; padding-top:1.5rem; margin-top:0; font-size:0.75rem;"
      : "font-family: 'Spectral', var(--font-body), serif; font-weight:400; margin-top:var(--cover-copyright-gap); font-size:calc(var(--cover-text-size) - 0.125rem);"
  }
>
  © {year} {authorName}. All rights reserved.
</footer>
