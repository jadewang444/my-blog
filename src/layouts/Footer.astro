---
/**
 * Minimal clean footer — only copyright text
 * Replace your entire Footer.astro content with this.
 */

let { author, copyright } = Astro.props;

// fallback setup
const authorName =
  typeof author === "string" ? author : (author?.name ?? "Shiyu Wang");

const year =
  (copyright && copyright.year) || new Date().getFullYear().toString();
---

<footer class="site-copyright w-full text-center flex items-center justify-center text-size-sm text-gray-500" style="font-family: 'Spectral', var(--font-body), serif; font-weight:400; margin-top:0; margin-bottom:0;">
  © {year} {authorName}. All rights reserved.
</footer>
