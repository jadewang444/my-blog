---
// i18n support removed for zh-CN — keep layout language-independent (English)
import { Icon } from "astro-icon/components";
import config from "$config";
import App from "$layouts/App.astro";
import Navigator from "$layouts/header/Navigator.svelte";
import Footer from "$layouts/Footer.astro";
import Tip from "$components/Tip.svelte";
import "$styles/global.less";
import "$styles/global.css";
import "$styles/markdown.less";
import "medium-zoom/dist/style.css";

let route = Astro.url.pathname;

const {
  title: subtitle,
  description = config.description,
  article,
} = Astro.props;
const title = config.title;
---

<!-- ✅ 引入字体 -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=Marcellus&family=Cormorant+Garamond:ital,wght@0,400;0,600;0,700;1,400;1,600;1,700&family=Spectral:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&family=Inter:wght@400;500;600&family=Parisienne&display=swap"
  rel="stylesheet"
/>

<!-- Defensive classic script: attach delegated click handler early so
     `.mobile-nav-toggle` aria-expanded toggles synchronously before
     framework hydration. Placed as a classic script (not module) so
     it executes predictably in headless environments. -->
<script src="/inline-nav-aria-toggle.js"></script>

<style>
  :root {
    /* Use Cormorant Garamond as the primary type across the site (user request).
       Keep --font-subtitle for cursive/prologue fallback. Define --monospace for
       the footer exception (copyright). */
    --font-title: "Cormorant Garamond", "Marcellus", "Times New Roman", Times, serif;
    --font-subtitle: "Parisienne", "Cormorant Garamond", serif;
    --font-body: "Cormorant Garamond", "Spectral", "Noto Serif SC", "Source Han Serif SC", "Songti SC", serif;
    --font-ui: "Inter", system-ui, -apple-system, "Segoe UI", "Noto Sans", Roboto, "Helvetica Neue", Arial, sans-serif;
    --monospace: ui-monospace, SFMono-Regular, Menlo, Monaco, "Liberation Mono", "Courier New", monospace;
    --body-size: 16px;
    --body-leading: 1.7;
  }

  body {
    font-family: var(--font-body);
    font-size: var(--body-size);
    line-height: var(--body-leading);
    font-weight: 400;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
    color: #111;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-title);
    font-weight: 400; /* use Regular 400 per design request */
    line-height: 1.15;
    letter-spacing: 0.01em;
    margin: 1.6em 0 0.6em;
  }
  /* Make the main H1 prominent and match the requested size/weight */
  h1 { font-size: 32px; font-weight: 400; }
  h2 { font-size: calc(var(--body-size) * 1.05); }
  h3 { font-size: clamp(1.4rem, 2.2vw, 1.8rem); }

  .subtitle,
  .tagline {
    font-family: var(--font-subtitle);
    font-weight: 400; /* Regular 400 per request */
    font-size: 21px; /* fixed 21px for subtitles */
    letter-spacing: 0.03em;
    line-height: 1.45;
    color: #222;
    opacity: 0.9;
  }

  /* Homepage preface/tagline styling (hero) */
  .hero-tagline {
    font-family: var(--font-body);
    font-size: 20px; /* slightly reduced for calm reading */
    font-weight: 400;
    line-height: 1.9; /* more breathing space */
    color: #333; /* a touch softer than pure black */
    opacity: 0.92; /* slightly muted */
    text-align: left;
    margin: 0; /* reset; spacing handled by container */
    max-width: 70ch; /* limit line length for better legibility */
  }

  .preface-date {
    /* match footer copyright style: Spectral, normal weight, subtle tone */
    font-family: 'Spectral', var(--font-body), serif;
    font-size: 0.95rem; /* match footer small size */
    font-weight: 400;
    color: var(--weak-color);
    opacity: 0.9;
    margin: 0;
    letter-spacing: 0.02em;
    /* default alignment — container will place this on the right in desktop */
    text-align: right;
  }

  /* Home page profile photo styling — refined, slightly smaller, and minimalist */
  .home-photo {
    display: block;
    margin: 0 auto; /* center horizontally */
    width: 45%; /* target 45% of the content container */
    max-width: 480px; /* cap so it never looks oversized on large screens */
    height: auto; /* keep aspect ratio */
    border-radius: 50%;
    object-fit: cover;
    box-shadow: 0 6px 18px rgba(0,0,0,0.06); /* elegant, soft shadow */
    border: 1px solid rgba(255,255,255,0.92); /* subtle frame */
    transition: transform 240ms ease, box-shadow 240ms ease;
    transform-origin: center;
  }

  /* Subtle hover (desktop) to add a touch of polish without drawing attention */
  @media (hover: hover) and (pointer: fine) {
    .home-photo:hover {
      transform: translateY(-1px);
      box-shadow: 0 8px 20px rgba(0,0,0,0.08);
    }
  }

  /* Mobile: ensure the photo stays comfortable on small screens */
  @media (max-width: 640px) {
    .home-photo {
      width: 88%; /* use most of the viewport width on mobile but keep padding */
      max-width: 360px;
      margin: 0.9rem auto;
    }
  }

  nav, button, input, select, textarea, .ui-text {
    font-family: var(--font-ui);
    letter-spacing: 0.01em;
  }

  main p {
    margin: 0 0 1.05em;
    letter-spacing: 0.003em;
  }

  blockquote {
    margin: 1.2em 0;
    padding-left: 1em;
    border-left: 3px solid #e6e6e6;
    color: #444;
    font-style: italic;
  }

  code, pre {
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
    font-size: 0.95em;
  }

  /* Ensure the cursive/prologue text keeps the subtitle/cursive font
     (we want the prologue "Casual thoughts..." untouched) */
  .font-cursive {
    font-family: var(--font-subtitle) !important;
  }

  /* Utility for generous airy spacing and centered content */
    .spacious {
      margin-block: clamp(28px, 6vw, 72px);
      text-align: center;
    }

    /* Hero layout container: group tagline + date as one compact unit */
    .hero-lines {
      max-width: var(--content-max-width, 780px);
      margin-left: auto;
      margin-right: auto;
      width: 100%;
      display: grid;
      /* Make the first column flexible but able to shrink when needed so the
         right-hand date column (auto) never gets pushed below the tagline. */
      grid-template-columns: minmax(0, 1fr) auto; /* tagline left, date right on one row */
      align-items: center;
      gap: 0.4em; /* slightly larger internal gap for clearer separation */
      padding-inline: clamp(0.5rem, 2vw, 1rem); /* responsive breathing room */
    }

    /* Ensure the tagline fills available space, can wrap within its column,
       and won't force the grid to expand beyond available width. */
    .hero-lines .hero-tagline {
      grid-column: 1 / 2;
      text-align: left;
      min-width: 0; /* allow the item to shrink inside the grid */
      overflow-wrap: break-word;
      word-break: normal;
    }

    /* Keep the date compact and anchored to the right. Prevent it from
       wrapping onto multiple lines so it remains visually aligned with the
       tagline on the same row. */
    .hero-lines .preface-date {
      grid-column: 2 / 3;
      justify-self: end;
      white-space: nowrap; /* keep the date on a single line */
    }

    /* CTA block styling */
    .cta-block {
      margin-block-start: clamp(2.5rem, 6vw, 4rem); /* desktop ~3.5-4rem, mobile scales down */
      text-align: center;
    }

    .cta-sentence {
      margin: 0 0 1.15em 0; /* gap to the link (≈1–1.5em) */
      font-family: var(--font-body);
      font-size: 20px; /* same as tagline */
      font-weight: 400;
      line-height: 1.9;
      text-align: center;
    }

    .cta-link {
      display: inline-block;
      font-family: var(--font-body);
      font-size: 18px; /* one size smaller than tagline */
      font-weight: 400;
      text-decoration: underline;
      margin: 0;
    }

    /* Responsive: stack on mobile but keep the same left/right alignments within the stacked unit */
    @media (max-width: 1023px) {

      .hero-lines {
        display: grid;
        grid-template-columns: 1fr;
        gap: 0.25rem;
        padding-inline: 0.5rem;
      }

      .hero-lines .hero-tagline { text-align: left; }
      .hero-lines .preface-date { text-align: right; justify-self: end; margin-top: 0.3em; }

      .cta-block { margin-block-start: clamp(2.5rem, 6vw, 3rem); }
    }

    /* make the home date visually centered and spaced from following content */
    .preface-date.text-center {
      text-align: center;
      font-variant-numeric: tabular-nums;
      font-family: 'Spectral', var(--font-body), serif;
      font-weight: 400;
      color: var(--weak-color);
      margin-block-start: 0.2rem;
      margin-block-end: clamp(18px, 4vw, 48px);
      font-size: 0.95rem;
    }

      /* style for article header date to match footer copyright */
      .jotting-date {
        font-family: 'Spectral', var(--font-body), serif;
        font-size: 0.95rem;
        font-weight: 400;
        color: var(--weak-color);
        opacity: 0.9;
        letter-spacing: 0.02em;
      }

      /* Ensure calendar icon + date text are geometrically centered
         across all breakpoints. Keep desktop typography intact; these
         rules are intentionally narrow and target only date-like elements. */
      .jotting-date,
      .preface-date,
      .preface-date.text-center {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem; /* ~8px */
        line-height: 1; /* ensure text doesn't add vertical offset */
        vertical-align: middle;
      }

      /* Icon wrapper produced by Icon.astro — make SVG a block-level icon with fixed size
         and remove any upstream vertical nudges applied via utility classes. */
      .jotting-date figure,
      .preface-date figure {
        display: inline-block;
        margin: 0;
        padding: 0;
        vertical-align: middle;
      }

      .jotting-date svg,
      .preface-date svg {
        display: block;
        width: 16px !important;
        height: 16px !important;
        min-width: 16px;
        min-height: 16px;
        transform: translateY(-1px); /* subtle optical tweak; <=2px */
      }

      /* Defensive: neutralize small top-offset utility present on icon component */
      /* Some utility-class names contain characters (like dots); match them defensively
         via attribute selector to avoid CSS parsing issues. */
      .jotting-date figure [class*="top-0.05em"],
      .preface-date figure [class*="top-0.05em"] {
        top: 0 !important;
      }

  /* Home link style: underlined, inline and visually calm */
  .home-link {
    text-decoration: underline;
    display: inline-block;
    margin-top: 0.6rem;
  }

  /* Refined site title styling: keep the same visual size but use
     Cormorant Garamond 400, slightly increased letter-spacing for a
     softer, more elegant presence, and move the title 1.5cm to the right.
     Also apply font-smoothing/text-rendering tweaks for crisper Retina
     rendering. We keep `font-size:32px` here so the visual size remains
     identical to the existing inline style. */
  .site-title {
    font-family: var(--font-title);
    font-weight: 400; /* regular */
    letter-spacing: 0.04em; /* slightly wider for an airy, refined look */
    margin-left: 1.5cm; /* user-requested horizontal offset */
    font-size: 32px; /* preserve existing size */
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
    display: inline-block; /* keep layout consistent */
  }

  /* Reduce the left offset on narrow viewports so the header remains
     balanced with the navigation icons on small screens. */
  @media (max-width: 640px) {
    .site-title { margin-left: 0.6cm; }
  }
</style>

<script>
  import zoom from "medium-zoom/dist/pure";
  window.zoom = () => zoom(".markdown img", { background: "#00000044" });
  window.zoom();

  // Run zoom after Astro page hydration
  document.addEventListener("astro:page-load", () => { window.zoom(); applyCaptionReset(); });

  // Deterministic runtime inline reset for captions at tablet and smaller widths.
  // This guarantees inline styles (higher specificity than compiled CSS) so
  // headless/browser computed bounding boxes reflect the intended layout.
  function applyCaptionReset() {
    try {
      const reset = () => {
        if (typeof window === 'undefined') return;
        const w = window.innerWidth || document.documentElement.clientWidth || 0;
        // Only apply at tablet and below (<=768px) — keeps desktop styling intact.
        if (w <= 768) {
          const selectors = ['.about-photo-caption', '.home-photo-caption', 'figure figcaption'];
          const caps = document.querySelectorAll(selectors.join(','));
          caps.forEach((el) => {
            // Clear transforms coming from page-scoped CSS and ensure breathing room.
            el.style.transform = 'none';
            el.style.marginTop = '0.9rem';
            // Defensive: clear will-change to avoid animation artifacts
            el.style.willChange = 'auto';
          });
        }
      };

      // Run once immediately and again after small delay to cover hydration timing.
      reset();
      setTimeout(reset, 250);

      // Attach a small native click handler to the mobile nav toggle to ensure
      // aria-expanded updates synchronously even before framework hydration.
      const attachNavToggleAriaSync = () => {
        try {
          // Use event delegation so the handler survives framework re-renders/hydration
          if ((window.__mobileNavDelegated)) return;
          document.addEventListener('click', (ev) => {
            try {
              const el = ev.target && ev.target.closest && ev.target.closest('.mobile-nav-toggle');
              if (!el) return;
              const cur = el.getAttribute('aria-expanded');
              el.setAttribute('aria-expanded', (cur === 'true' ? 'false' : 'true'));
            } catch (err) {
              // ignore per-click errors
            }
          }, true);
          window.__mobileNavDelegated = true;
        } catch (e) {
          // ignore
        }
      };

      attachNavToggleAriaSync();

      // Also listen for resizes to keep inline styles correct during viewport changes.
      let t;
      window.addEventListener('resize', () => {
        clearTimeout(t);
        t = setTimeout(reset, 120);
      });
      window.addEventListener('resize', () => setTimeout(attachNavToggleAriaSync, 120));
    } catch (err) {
      // Non-blocking: log for diagnostics but do not throw.
      // eslint-disable-next-line no-console
      console.warn('applyCaptionReset failed', err);
    }
  }
</script>

<!-- Inline defensive script: ensure mobile nav aria-expanded toggles even before hydration. -->
<script>
  (function () {
    try {
      if (window.__mobileNavDelegated) return;
      document.addEventListener('click', function (ev) {
        try {
          const el = ev.target && ev.target.closest && ev.target.closest('.mobile-nav-toggle');
          if (!el) return;
          const cur = el.getAttribute('aria-expanded');
          el.setAttribute('aria-expanded', (cur === 'true' ? 'false' : 'true'));
        } catch (e) {}
      }, true);
      window.__mobileNavDelegated = true;
    } catch (e) {}
  })();
</script>

<App {title} {subtitle} {description} {article}
  author={typeof config.author == "string" ? config.author : config.author.name}
>
  <Tip client:load>
    <Icon name="lucide:info" slot="information" is:inline />
    <Icon name="lucide:circle-check" slot="success" is:inline />
    <Icon name="lucide:circle-question-mark" slot="question" is:inline />
    <Icon name="lucide:circle-alert" slot="warning" is:inline />
    <Icon name="lucide:circle-x" slot="error" is:inline />
    <Icon name="lucide:x" slot="x" is:inline />
  </Tip>

  <div class="flex flex-col mx-a px-3 w-[min(100%,1000px)]">
    <div id="body" class="flex flex-col min-h-screen">
      <header class="sticky top-0 flex items-center justify-between pt-3 pb-1 mb-4 bg-background z-2 sm:(static pb-12)">
        <a
          href="/"
          class={`site-title ${route == "/" ? "text-size-sm sm:text-size-lg font-600" : "text-size-xs sm:text-size-sm font-600"}`}
        >
          {title}
        </a>

        <!-- ✅ 只保留 Home / Jotting / About（以及 globe、bars、close 插槽） -->
    <Navigator {route} client:load>
          <Icon name="lucide:tent" slot="home" is:inline />
          <Icon name="lucide:feather" slot="jotting" />
          <Icon name="lucide:at-sign" slot="about" />
          <Icon name="lucide:earth" slot="globe" />
          <Icon name="lucide:align-justify" slot="bars" />
          <Icon name="lucide:x" slot="close" is:inline />
        </Navigator>
      </header>

      <slot />
    </div>

    <Footer author={config.author} copyright={config.copyright} isHome={route === '/'} />
  </div>